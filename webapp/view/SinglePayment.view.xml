<mvc:View controllerName="ee.com.finance.FI-112.controller.SinglePayment" height="100%" xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.f" xmlns:table="sap.ui.table"
	xmlns:l="sap.ui.layout" xmlns:smartForm="sap.ui.comp.smartform" xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:custom="ee.com.finance.FI-112.custom">
	<NavContainer id="wizardNavContainer">
		<pages>
			<f:DynamicPage id="idDynamicPage" class="sapUiNoContentPadding" showFooter="true" fitContent="true">
				<f:content>
					<Wizard id="idWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content">
						<!--<WizardStep id="idGeneralInformation" title="{i18n>generalInformationTitle}" complete="onCompleteGeneralInfo"-->
						<!--	activate="onActivateGeneralInfo" validated="false">-->
						<WizardStep id="idGeneralInformation" title="{i18n>generalInformationTitle}" complete="onCompleteGeneralInfo">
							<smartForm:SmartForm id="idGeneralInfo" editable="true">
								<smartForm:layout>
									<smartForm:Layout labelSpanL="4" labelSpanM="4" emptySpanL="5"/>
								</smartForm:layout>
								<smartForm:Group>
									<smartForm:GroupElement>
										<smartField:SmartField id="idCompanyCode" value="{CompanyCode}" change="onActivateGeneralInfo"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField id="idSupplierNumber" value="{SupplierNumber}" change="onChangeGeneralInfo"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<Button text="{i18n>oneTimeVendorLabel}" press="onPressOneTimeVendorDialog" enabled="{= ${wizardView>/isOneTimeVendorSelected}}"></Button>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField textLabel="{i18n>supplierNameLabel}" value="{SupplierName}" visible="{= ${wizardView>/isSupplierNameSelected}}"
											editable="false"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField textLabel="{i18n>supplierNameLabel}" value="{Name}" visible="{= ${wizardView>/isNameSelected}}" editable="false"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField value="{AbnNumber}" mandatory="{= ${wizardView>/isAbnNumberMandatory}}"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField value="{ReferenceNumber}" change="onActivateGeneralInfo"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField value="{DocumentDate}" change="onActivateGeneralInfo"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField id="idGrossAmount" value="{GrossAmount}" change="._calculateLineItemBalance"/>
									</smartForm:GroupElement>
									<!--<smartForm:GroupElement>-->
									<!--	<Label text="Tax Amount: "/>-->
									<!--	<Input value="{TaxAmount}"/>-->
									<!--</smartForm:GroupElement>-->
									<smartForm:GroupElement>
										<!--	<smartField:SmartField value="{TaxAmountIndicator}" change="onSelectAutoCalcTax"/>-->
										<!--</smartForm:GroupElement>-->
										<!--<smartForm:GroupElement>-->
										<!--<HBox>-->
										<!--		<Label text="Tax Amount: " textAlign="Begin" class="sapUiTinyMarginBegin"/>-->
										<!--		<Text text="{TaxAmount}" enabled="{wizardView>/isEnabledAutoCalcTax}"/>-->
										<!--</HBox>-->
										<!--<InputListItem label="Tax Amount: "/>-->
										<!--<Text text="{TaxAmount}" enabled="{wizardView>/isEnabledAutoCalcTax}"/>-->
										<smartField:SmartField id="idTaxAmount" value="{TaxAmount}"/>
										<!--<smartField:SmartField id="idTaxAmount" value="{TaxAmount}" editable="true" enabled="false"/>-->
									</smartForm:GroupElement>
									<!--<smartForm:GroupElement>-->
									<!--	<Label text="Tax Amount: "/>-->
									<!--	<Text text="{TaxAmount}"/>-->
									<!--</smartForm:GroupElement>-->
									<smartForm:GroupElement>
										<smartField:SmartField value="{Description}"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField value="{RequesterID}" change="onActivateGeneralInfo"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField value="{CmIndicator}" change="onSelectCredit"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField value="{CmRefDat}" visible="{wizardView>/isEnabledCredit}"/>
									</smartForm:GroupElement>
									<smartForm:GroupElement>
										<smartField:SmartField value="{CmRefNo}" visible="{wizardView>/isEnabledCredit}"/>
									</smartForm:GroupElement>
								</smartForm:Group>
							</smartForm:SmartForm>
						</WizardStep>
						<WizardStep id="idAccountingData" validated="false" title="{i18n>accountingDataTitle}">
							<VBox class="sapUiMediumMarginBeginEnd sapUiTinyMarginTopBottom" id="idMessageStripVbox" visible="false"/>
							<FlexBox alignItems="End" justifyContent="End">
								<ObjectStatus id="idStatus" text="{i18n>balanceLabel} {wizardView>/LineItemBalance} {wizardView>/CurrencyUnit}"/>
								<!--<Label text="{i18n>balanceLabel}"/>-->
								<!--<Label text="{wizardView>/LineItemBalance} {wizardView>/CurrencyUnit}"/>-->
								<!--<Label text=" {wizardView>/CurrencyUnit}"/>-->
							</FlexBox>
							<smartTable:SmartTable id="idLineItemsSmartTable" entitySet="LineItem" smartFilterId="smartFilterBar" tableType="Table"
								useExportToExcel="false" useVariantManagement="false" useTablePersonalisation="false" header="{i18n>lineItemsTitle}" showRowCount="false"
								persistencyKey="SmartTableAnalytical_Explored" class="sapUiResponsiveContentPadding" editable="true" fieldChange="onFieldChange"
								initialise="onSmartTableInitialise" height="30em" initiallyVisibleFields="CreditDebit">
								<smartTable:customToolbar>
									<OverflowToolbar design="Transparent">
										<ToolbarSpacer/>
										<Button text="{i18n>calculateTaxLabel}" press="onPressCalculateTax" type="Transparent"/>
										<!--<Button icon="sap-icon://simulate" type="Transparent"/>-->
										<Button text="{i18n>deleteLabel}" press="onPressDelete" type="Transparent"/>
										<Button icon="sap-icon://add" press="onPressAdd" type="Transparent"/>
										<Button icon="sap-icon://complete" press="onPressValidate" type="Transparent"/>
										<u:FileUploader id="FileUploaderId" sameFilenameAllowed="true" iconOnly="true" buttonOnly="true" fileType="XLSX,xlsx,CSV,csv,xls"
											icon="sap-icon://upload" style="Transparent" change="onUpload"/>
									</OverflowToolbar>
								</smartTable:customToolbar>
								<table:Table>
									<!--<table:rowSettingsTemplate>-->
									<!--	<table:RowSettings highlight="{tableView>/CID}"/>-->
									<!--</table:rowSettingsTemplate>-->
								</table:Table>
							</smartTable:SmartTable>
						</WizardStep>
						<WizardStep title="{i18n>supportingDocumentTitle}" validated="false">
							<UploadCollection id="idUploadSupportingDocument" mode="SingleSelectLeft" fileDeleted="onPressFileDeleted" class="sapUiResponsiveMargin"
								change="onChange" instantUpload="false" uploadComplete="onUploadComplete" beforeUploadStarts="onBeforeUploadStarts" noDataText="{i18n>uploadLabel}" noDataDescription="{i18n>setPrimaryDescriptionLabel}" >
								<toolbar>
									<OverflowToolbar id="myId">
										<Title id="attachmentTitle"/>
										<ToolbarSpacer/>
										<Button id="idSetPrimaryButton" text="{i18n>setPrimaryLabel}" press="onPressSetPrimary" type="Transparent"/>
										<UploadCollectionToolbarPlaceholder/>
									</OverflowToolbar>
								</toolbar>
								<!--<items>-->
								<!--	<UploadCollectionItem deletePress="onPressFileDeleted" fileName="{FilePath}"></UploadCollectionItem>-->
								<!--</items>-->
							</UploadCollection>
						</WizardStep>
					</Wizard>
				</f:content>
				<f:footer>
					<OverflowToolbar>
						<Button id="idMessageBtn" icon="sap-icon://alert" text="{= ${messages>/}.length}" type="Emphasized" visible="{= ${messages>/}.length > 0}"
							press="onPressMessagePopover"/>
						<ToolbarSpacer/>
						<!--<Button text="{i18n>Submit}" type="Emphasized" enabled="{= ${/submitButtonEnabled}==='true'}"/>-->
						<Button id="idSubmitButton" visible="false" text="{i18n>submitLabel}" type="Emphasized" press=".onPressSubmit"/>
						<Button text="{i18n>cancelLabel}" type="Transparent" press=".onPressCancel"/>
					</OverflowToolbar>
				</f:footer>
			</f:DynamicPage>
		</pages>
	</NavContainer>
</mvc:View>